@using ConvertTheString.Models;

@model IEnumerable<tblLocation>

@{
    ViewBag.Title = "Location";
}

<h2>Location</h2>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("ID", "Index", new { sortBy = ViewBag.SortID})
        </th>
        <th>
            @Html.ActionLink("Created", "Index", new { sortBy = ViewBag.SortCreated })
        </th>
        <th>
            @Html.ActionLink("Location", "Index", new { sortBy = ViewBag.SortLocation })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Id.ToString(), "Index", "Employees", new { locationId = item.Id }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.location)
            </td>
        </tr>
    }

</table>
